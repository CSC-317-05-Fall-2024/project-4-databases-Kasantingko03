<!DOCTYPE html>

<html lang="en">

<head>
    <title>Travel Guide</title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/restaurant-details-styles.css" />
    <link rel="icon" type="image/png" href="images/icon.svg">
</head>

<body>
    <div class="restaurant-details">
        <img class="restaurant-details-img" src="<%= photo %>" alt="<%= name %>">
        <div>
            <h1><%= name %></h1>
            <h2><%= address %></h2>
            <h2><%= phone %></h2>
        </div>
    </div>

    <section class="reviews-container">
        <h3>Reviews</h3>
        <% reviews.forEach(review => { %>
            <div class="review-card">
                <p><strong>‚≠ê <%= review.rating %>/5</strong></p>
                <p><%= review.content %></p>
            </div>
        <% }) %>
    </section>

    <script src="/scripts/header.js"></script>
</body>

</html>
